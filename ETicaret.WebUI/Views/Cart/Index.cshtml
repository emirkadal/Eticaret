@model CartViewModel

@{
    ViewData["Title"] = "Sepetim";
}
<section class="container mt-5" style="margin-bottom:250px">
    <div class="text-center">
        <h1 class="display-4">
            <b>Sepetim</b>
        </h1>
    </div>
    <div class="row mt-4">
          @if (Model.CartLines.Any())
                {
        <div class="col-md-8">
            <div class="table-responsive">
              
                    <table class="table table-striped table-hover">
                        <tr>
                            <th></th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Adet</th>
                            <th>Toplam Tutar</th>
                            <th></th>
                        </tr>
                
                        <tbody>
                                @foreach (var item in Model.CartLines)
                                {
                                    <tr>
                                        <td>
                                            <img src="/Img/Products/@item.Product.Image" height="37" />
                                        </td>
                                        <td>
                                            <a class="nav-link text-dark" href="/Products/Details/@item.Product.Id">
                                                @item.Product.Name
                                            </a>
                                        </td>
                                        <td>
                                            @item.Product.Price.ToString("c")
                                        </td>
                                        <td>
                                            @item.Quantity
                                        </td>
                                        <td>
                                            @((item.Quantity * item.Product.Price).ToString("c"))
                                        </td>
                                        <td>
                                            <form asp-action="Remove" asp-controller="Cart">
                                                <input type="hidden" name="ProductId" value="@item.Product.Id" />
                                                <button class="btn btn-sm btn-danger" type="submit">
                                                    <i class="bi bi-x-lg "></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
           
            </div>
        </div>
        <div class="col-md-4">
            <div>
                    <h4><b>Sepet Toplamı</b></h4>
                    <hr />
            </div>
            <table class="table">
                <tr>
                        <td><b>Ara Toplam</b></td>
                    <td>@Model.TotalPrice.ToString("c")</td>
                </tr>
                <tr>
                    <td><b>Kargo Ücreti</b></td>
                    <td>
                            @(Model.TotalPrice > 999 ? "Ücretsiz" : Model.CartLines.Any() ? "₺49,00" : "₺0")
                    </td>
                </tr>
                
                <tr>
                        <th>Sipariş Toplamı</th>
                    <td>
                            <b>@(Model.TotalPrice > 999 ? Model.TotalPrice.ToString("c") : (Model.CartLines.Any() ? (Model.TotalPrice + 49).ToString("c") : Model.TotalPrice.ToString("c")))</b>
                    </td>
                </tr>
            </table>
             <div class="text-center">
                    <a href="/" class="btn btn-outline-danger">
                        <i class="bi bi-cart me-1 "></i>
                         Alışverişe Devam Et
                    </a>  
                    <a href="/Cart/Checkout" class="btn btn-outline-success">
                        <i class="bi bi-credit-card me-1 "></i>
                         Satın Al
                    </a>
             </div>

        </div>
        }
        else
        {
            <div class="container">
                <div class="alert alert-dark my-3 text-center" style="margin-left:100px">
                    <h3>Sepetinizde ürün bulunmamaktadır.</h3>
                </div>
            </div>
        }
    </div>
</section>