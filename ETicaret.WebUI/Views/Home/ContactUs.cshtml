@model Eticaret.Core.Entities.Contact

@{
    ViewData["Title"] = "İletişim";
}

<div class="text-center"> 
    <h1 class="display-4">
        İletişim
    </h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ContactUs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="Name" class="control-label"></label></b>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Surname" class="control-label"></label></b>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Email" class="control-label"></label></b>
                 <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Phone" class="control-label"></label></b>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Message" class="control-label"></label></b>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h5>Bize Ulaşın</h5>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3698.4095326765396!2d29.006393376532856!3d41.1194269125727!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab728fc42dd33%3A0x17d213078fb809f4!2zxLBzdGFuYnVsIE5pxZ9hbnRhxZ_EsSDDnG5pdmVyc2l0ZXNp!5e1!3m2!1str!2str!4v1734531346552!5m2!1str!2str" width="1000" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  
</div>


