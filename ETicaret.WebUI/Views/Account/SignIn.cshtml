@model LoignViewModel
@{
    ViewData["Title"] = "Giriş";
}
<style>
    html,
    body {
        height: 100%;
        background: #ffffff;
        font-family: 'Arial', sans-serif;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .form-signin:hover {
            transform: scale(1.05);
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"],
        .form-signin input[type="password"] {
            margin-bottom: -1px;
            border-radius: 0;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease-in-out;
        }

            .form-signin input[type="email"]:focus,
            .form-signin input[type="password"]:focus {
                border-color: #007bff;
            }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
        }

    .btn-outline-primary,
    .btn-outline-success,
    .btn-outline-danger {
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .btn-outline-primary:hover,
        .btn-outline-success:hover,
        .btn-outline-danger:hover {
            background-color: #007bff;
            color: #fff;
        }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }

    .alert {
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>


<main class="form-signin w-100 m-auto shadow rounded my-5">
    <form asp-action="SignIn">
        <h1 class="h3 mb-3 fw-normal">Üye Girişi</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">E-Mail </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start my-3">
            <input asp-for="Rememberme" class="form-check-input" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
        <button class="btn btn-outline-primary w-100 py-2" type="submit">Giriş Yap</button>
    </form>
    <div class="row">
        <div class="col-12 my-3">
            <a href="/Account/SignUp" class="btn btn-outline-success w-100 py-2">Üye Ol</a>
        </div>
        <div class="col-12">
            <a href="/Account/PasswordRenew" class="btn btn-outline-danger w-100 py-2">Şifremi Unuttum</a>
        </div>

    </div>
</main>
<hr />
<p class="alert alert-light alert-dismissible text-center">Sipariş oluşturmak, Kampanyalardan yararlanmak, Siparişinizi takip etmek için lütfen giriş yapınız. </p>
